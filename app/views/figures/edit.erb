<head></head>
<body>
    <h1>Edit this Figure</h1>
    
    <form action="/figures/<%=@figure.id%>" method="POST">
        <input type="hidden" name="_method" value="patch">

        <label for="name">Figure Name: </label>
        <input type="text" id="figure_name" name="figure[name]" value="<%=@figure.name%>">

        <br>

        <label>Select Existing Landmarks Available:</label>
        <%@landmarks.each do |landmark|%>
            <br>

            <input type="checkbox" 
                name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark)%>>
                <%=landmark.name%>
            </input>

        <%end%>

        <br><br>

        <label for="name">Enter new Landmark Name: </label>
        <input id="new_landmark" type ="text" name="landmark[name]">

        <br>

        <label>Select Existing Titles Available:</label>

        <%@titles.each do |title|%>
            <br>
            
            <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>" <%='checked' if @figure.titles.include?title%>>
                <%=title.name%>
            </input>

        <%end%>

        <br><br>

        <label for="name">Enter new Title: </label>

        <input id="new_title" type ="text" name="title[name]">

        <input type="submit" id="submit" value="Edit Figure">

    </form>

</body>